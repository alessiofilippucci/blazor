<div class="card">
    @if (Header != null)
    {
        <div class="card-header">
            @Header
        </div>
    }
    <div class="card-body">
        @Body
    </div>
    @if (Footer != null)
    {
        <div class="card-footer">
            @Footer
        </div>
    }
</div>

@code {

    [Parameter]
    public RenderFragment? Header { get; set; }

    [Parameter]
    public RenderFragment Body { get; set; } = null!;

    [Parameter]
    public RenderFragment? Footer { get; set; }
}
